{
  "baseUrl": "types",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "types":[
      "es6-shim",
      "node"
    ],
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [ "node_modules/@types/" ]
  },
  "exclude": [
    "typings",
    "node_modules"
  ],
  "compileOnSave": false
}
